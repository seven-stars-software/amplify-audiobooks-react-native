{
  "extends": "@react-native/typescript-config/tsconfig.json",
  "compilerOptions": {
    "types": ["node", "jest"],
    "allowJs": true,
    "checkJs": true,
    "strict": true,
    // Path alias config
    "baseUrl": ".",
    "typeRoots": ["./src/types", "./node_modules/@types"],
    "paths": {
      "@assets/*": [
        "./assets/*"
      ],
      "*": [
        "./src/*"
      ],
    },
  },
  "exclude": ["node_modules", "**/node_modules/*"]
}
